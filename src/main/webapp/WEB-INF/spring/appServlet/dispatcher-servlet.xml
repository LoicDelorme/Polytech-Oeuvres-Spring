<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">
 
    <bean id="viewResolver" class="org.springframework.web.servlet.view.InternalResourceViewResolver" >        
         <property name="prefix" value="/WEB-INF/views/"/>
          <property name="suffix" value=".jsp"/>
    </bean>
    
    <bean name="/ArtworkStateController/*" class="fr.polytech.oeuvres.controllers.ArtworkStateController">
    	<property name="methodNameResolver">
            <bean class="org.springframework.web.servlet.mvc.multiaction.InternalPathMethodNameResolver"/>
        </property>
    </bean>
    
    <bean name="/LoanArtworkController/*" class="fr.polytech.oeuvres.controllers.LoanArtworkController">
    	<property name="methodNameResolver">
            <bean class="org.springframework.web.servlet.mvc.multiaction.InternalPathMethodNameResolver"/>
        </property>
    </bean>
    
    <bean name="/LoanController/*" class="fr.polytech.oeuvres.controllers.LoanController">
    	<property name="methodNameResolver">
            <bean class="org.springframework.web.servlet.mvc.multiaction.InternalPathMethodNameResolver"/>
        </property>
    </bean>
    
    <bean name="/MemberController/*" class="fr.polytech.oeuvres.controllers.MemberController">
    	<property name="methodNameResolver">
            <bean class="org.springframework.web.servlet.mvc.multiaction.InternalPathMethodNameResolver"/>
        </property>
    </bean>
    
    <bean name="/OwnerController/*" class="fr.polytech.oeuvres.controllers.OwnerController">
    	<property name="methodNameResolver">
            <bean class="org.springframework.web.servlet.mvc.multiaction.InternalPathMethodNameResolver"/>
        </property>
    </bean>
    
    <bean name="/PurchaseController/*" class="fr.polytech.oeuvres.controllers.PurchaseController">
    	<property name="methodNameResolver">
            <bean class="org.springframework.web.servlet.mvc.multiaction.InternalPathMethodNameResolver"/>
        </property>
    </bean>
    
    <bean name="/PurchaseStatusController/*" class="fr.polytech.oeuvres.controllers.PurchaseStatusController">
    	<property name="methodNameResolver">
            <bean class="org.springframework.web.servlet.mvc.multiaction.InternalPathMethodNameResolver"/>
        </property>
    </bean>
    
    <bean name="/SaleArtworkController/*" class="fr.polytech.oeuvres.controllers.SaleArtworkController">
    	<property name="methodNameResolver">
            <bean class="org.springframework.web.servlet.mvc.multiaction.InternalPathMethodNameResolver"/>
        </property>
    </bean>
</beans>